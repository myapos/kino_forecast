* {
  font-family: Verdana, Geneva, sans-serif;
}
table, th, td {
  border: 1px solid black;
  border-collapse: collapse;
}

.wrapper {
  margin-top: 10px;
  display: grid;
  grid-template-columns: repeat(10, 50px); //50px 50px 50px 50px 50px 50px 50px 50px 50px 50px;
  grid-gap: 15px;
  color: #444;
  justify-items: center;
}

@media only screen and (max-width: 600px) {
  .wrapper {
    grid-template-columns: repeat(5, 50px); //50px 50px 50px 50px 50px 50px 50px 50px 50px 50px;
  }
  tabs, wrapper {
    min-width:350px;
    overflow-x:scroll;
  }
}

.box {
  background-color: #444;
  color: #fff;
  border-radius: 5px;
  padding: 20px;
  font-size: 100%;
}

.winning {
  background-color: #cba051;
}

.kino_bonus {
  background-color: #c50e0e;
}

.twelve {
  background-color: lightblue;
}
